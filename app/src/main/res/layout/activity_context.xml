<!--    android:layout_height="match_parent"-->
<!--    tools:context=".ContextActivity">-->

    <LinearLayout
        android:id="@+id/context_all"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Please record your environment info: "
            android:textSize="22dp" />


        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your location:"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.1" />

        <RadioGroup
            android:id="@+id/indoor_radiobtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.26">

        <RadioButton
            android:id="@+id/door_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:checked="true"
            android:text="Indoor" />

        <RadioButton
            android:id="@+id/door_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="Outdoor" />
        </RadioGroup>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your surrounding: "
            android:textSize="20dp"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.1" />

        <RadioGroup
            android:id="@+id/company_radiobtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.26">

            <RadioButton
                android:id="@+id/company_alone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:checked="true"
                android:text="I'm alone" />


        <RadioButton
            android:id="@+id/company_stranger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Somebody around but no conversation"
            android:textSize="18dp" />

        <RadioButton
            android:id="@+id/company_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Somebody around and conversation"
            android:textSize="18dp" />
        </RadioGroup>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Where are youï¼Ÿ"
            android:textSize="20dp"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.1" />

        <RadioGroup
            android:id="@+id/location_radiobtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.26">

            <RadioButton
                android:id="@+id/location_dorm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:checked="true"
                android:text="At home" />


            <RadioButton
                android:id="@+id/location_classroom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="At class"
                android:textSize="18dp" />

            <RadioButton
                android:id="@+id/location_library"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="At library"
                android:textSize="18dp" />


            <RadioButton
                android:id="@+id/location_lab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="At lab/office"
                android:textSize="18dp" />

            <RadioButton
                android:id="@+id/location_res"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="At diner"
                android:textSize="18dp" />

            <RadioButton
                android:id="@+id/location_gym"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="At sports facilities"
                android:textSize="18dp" />

            <RadioButton
                android:id="@+id/location_entertain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="At entertainment facilities"
                android:textSize="18dp" />

            <RadioButton
                android:id="@+id/location_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Others"
                android:textSize="18dp" />

        </RadioGroup>


        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Current location (If you selevt 'Others' in the above question):"
            android:textSize="16dp"
            android:textColor="@android:color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.1" />

        <EditText
            android:id="@+id/location_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.4" />

        <Button
            android:id="@+id/submit_context"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Submit"
            android:textSize="18sp" />

    </LinearLayout>



</ScrollView>
